---
import fetchData from "../lib/fetchData.ts";
import type FetchData from "../interfaces/FetchData.ts";
import Layout from "../layouts/Layout.astro";
import Team from "../components/sections/about/Team.tsx";
import type TeamItem from "../interfaces/TeamItem.ts";

const query = `
query Query {
	teamModel {
    name
    title
    photo
    quote
		story {
			header
			subheader
			photo
			slides {
				date
				text
			}
		}
		award
    counters {
      number
      text
    }
    certificates {
      title
      text
      image
    }
  }
}
`;

const { teamModel: data }: FetchData = await fetchData(query);
